{
    "compilerOptions": {
      "target": "es2015", // Set to the desired JavaScript version.
      "module": "es2015", // Modern modules for better tree-shaking.
      "removeComments": false, // Preserve comments including JSDoc.
      "declaration": true, // Generate .d.ts files.
      "outDir": "./dist", // Specify the output directory.
      "sourceMap": false, // Disable source maps to reduce file size.
      "noEmitHelpers": true, // Avoid helper duplication.
      "importHelpers": true, // Use tslib for shared helper functions.
      "downlevelIteration": false, // Skip extra helpers for `for...of`.
      "moduleResolution": "bundler"
    },
    "exclude": ["node_modules", "test"]
  }